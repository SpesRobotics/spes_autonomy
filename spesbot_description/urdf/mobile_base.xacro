<?xml version="1.0" encoding="utf-8"?>
<robot name="mobile_base" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="mobile_base">
        <link name="base_link">
            <visual>
                <geometry>
                    <mesh
                        filename="package://spesbot_description/urdf/meshes/mobile_base.stl" />
                </geometry>
            </visual>
        </link>
        <joint name="left_motor" type="continuous">
            <parent link="base_link" />
            <child link="left_wheel_link" />
            <origin xyz="0 0.1 0" rpy="0 0 0" />
            <axis xyz="0 0 1" />
        </joint>
        <link name="left_wheel_link">
            <visual>
                <geometry>
                    <mesh
                        filename="package://spesbot_description/urdf/meshes/simplified/wheel.stl" />
                </geometry>
            </visual>
        </link>
    </xacro:macro>
</robot>